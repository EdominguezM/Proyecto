
<% if user_signed_in? %>
  <%= search_form_for @q, url: root_path, method: "get" do |f| %>
     <div class="container">
       <div class="form-group">
          <%= f.label :content_cont, "Buscador" %>
          <%= f.search_field :content_cont, class:"form-control mr-sm-1" %>
           <%= f.submit "Buscar", class: "btn btn-primary " %>
        </div>
      </div>   
  <% end %>

  <% @tweets.each do |tweet| %>
    <div class="card row" style="width: 105rem;">  
          <h5 class="card-title">Tweet de <%= tweet.user.name %></h5><p>Created <%= distance_of_time_in_words(Time.now - tweet.created_at)%> ago</p>
        <%= image_tag "#{tweet.image_avatar}", style: 'height:90px;width:90px'%>
        <div class="card-body" style="width: 105rem;">
          <h4 class="card-text mb-2">Contenido:<br></h4><%= tweet.content %><hr>
          <p class="card-text text-muted"><%= tweet.likes.count %><%= (tweet.likes.count) == 1 ? ' Like ' : ' Likes '%><i class="fas fa-heart"></i>
            <%= tweet.retweets.count %><%= (tweet.retweets.count) == 1 ? ' Retweet ' : ' Retweets '%><i class="fas fa-retweet"></i>
          </p>
         <div class="container-fluid">
          <% if user_signed_in? %>
            <%= link_to 'Retweet', tweet_retweets_path(tweet), method: :post, class:"btn btn-primary"  %>
            <%= link_to 'Mostrar', tweet , class:"btn btn-success" %><hr>
          <%end%>
        </div>
      
          <!--<a><%= link_to 'Edit', edit_tweet_path(tweet) %></a>
          <a><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></a>-->
        </div>
    </div>
    <hr class="green">
  <% end%>
  
<% end%>
 <%= paginate @tweets %>