<h1 id="emi">Tweets</h1><hr>


<% if user_signed_in? %>
  <div class="row">
  <div class="col-md-3 offset-md-2">
    <%= search_form_for @q , url: tweets_path , method: "get"  do |f| %> 
      <div class="container">
       <div class="form-group">
          <%= f.label :content_cont, "Buscador" %>
          <%= f.search_field :content_cont  %>
           <%= f.submit "Buscar", class: "btn btn-primary " %>
        </div>
      </div>   
     <% end %>
  </div>
  </div>
  <%= form_with(model: @tweet, local: true) do |form| %>
    <div class="field">
      <h4><%= form.label :content, "Nuevo Tweet" %></h4><br>
      <%= form.text_area :content, size: "90x3" %>
    </div>

    <div class="actions">
      <%= form.submit "Guardar", class:"btn btn-success" %>
    </div>
  <% end %><hr class="green">
<%else%>
    <li><%= link_to 'Register', new_user_registration_path %></li>
    <li><%= link_to 'log in', user_session_path %></li><hr>
<%end%>

  <div clas="row-12 text-center container">
    <% @tweets.each_with_index do |tweet, index| %>
      <p>Created <%= distance_of_time_in_words(Time.now - tweet.created_at)%> ago</p>
      <div class="row-12" style="width: 45rem;">
      <%= image_tag "#{tweet.image_avatar}", style: 'height:85px;width:90px'%>     
          <div class="card-body "style="width: 105rem;">
            <h5 class="card-title">Tweet <%= index + 1 %> </h5> <!--el index es el digito que aumenta desde "0" por eso se suma 1-->
            <h4 class="card-text mb-2"><%= safe_join(tweet.content.split(" ").map {|a| a[0] == "#" ?  link_to(a, tweets_search_path(a)) : a }," ".html_safe) %></h4>
            <p class="card-text text-muted"><%= tweet.likes.count %><%= (tweet.likes.count) == 1 ? ' Like ' : ' Likes '%><i class="fas fa-heart"></i>
            <p class="card-text text-muted"><%= tweet.retweets.count %><%= (tweet.retweets.count) == 1 ? ' Retweet ' : ' Retweets '%><i class="fas fa-retweet"></i></p>
            <% if user_signed_in? %>
            <div>
              <%= button_to 'Retweet', tweet_retweets_path(tweet), method: :post, class:"btn btn-primary"  %><br><%= link_to 'Mostrar', tweet , class:"btn btn-info"%>
            </div>
          </div>
            <%end%>
                <!--<a><%= link_to 'Edit', edit_tweet_path(tweet) %></a>
            <a><%= link_to 'Destroy', tweet, method: :delete, data: { confirm: 'Are you sure?' } %></a>-->
          
      </div>
      <hr class="green">
    <% end%>
    
  </div>
 
 <%= paginate @tweets %>




